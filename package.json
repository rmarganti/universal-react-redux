{
    "name": "universal-predux",
    "version": "0.0.1",
    "description": "Opinionated React + Redux boilerplate w/server-side rendering",
    "main": "index.js",
    "author": "Ryan Marganti <rmarganti@gannett.com>",
    "license": "MIT",
    "scripts": {
        "build": "better-npm-run build",
        "dev": "concurrently --kill-others \"npm run watch-client\" \"npm run start-dev\"",
        "start": "npm run start-production",
        "start-dev": "better-npm-run start-dev",
        "start-production": "better-npm-run start-production",
        "test": "echo \"Error: no test specified\" && exit 1",
        "watch-client": "better-npm-run watch-client"
    },
    "betterScripts": {
        "build": {
            "command": "webpack --verbose --colors --display-error-details --config webpack/webpack.config.production.js",
            "env": {
                "NODE_ENV": "production"
            }
        },
        "start-dev": {
            "command": "node ./bin/server.js",
            "env": {
                "NODE_ENV": "development",
                "APP_PORT": 3000
            }
        },
        "start-production": {
            "command": "node ./bin/server.js",
            "env": {
                "NODE_ENV": "production",
                "APP_PORT": 8080
            }
        },
        "watch-client": {
            "command": "node webpack/webpack.server.dev.js",
            "env": {
                "UV_THREADPOOL_SIZE": 100,
                "PORT": 3000
            }
        }
    },
    "dependencies": {
        "babel-core": "^6.21.0",
        "babel-loader": "^6.2.10",
        "babel-plugin-webpack-alias": "^2.1.2",
        "babel-preset-es2015": "^6.18.0",
        "babel-preset-react": "^6.16.0",
        "babel-preset-react-hmre": "^1.1.1",
        "babel-preset-stage-0": "^6.16.0",
        "babel-register": "^6.18.0",
        "better-npm-run": "^0.0.13",
        "ejs": "^2.5.5",
        "eslint-import-resolver-webpack": "^0.8.0",
        "express": "^4.14.0",
        "ignore-styles": "^5.0.1",
        "react": "^15.4.1",
        "react-dom": "^15.4.1",
        "react-redux": "^5.0.1",
        "react-router": "^3.0.0",
        "redux": "^3.6.0",
        "redux-thunk": "^2.1.0"
    },
    "devDependencies": {
        "chai": "^3.5.0",
        "concurrently": "^3.1.0",
        "css-loader": "^0.26.1",
        "eslint": "^3.12.2",
        "eslint-config-airbnb": "^13.0.0",
        "eslint-plugin-import": "^2.2.0",
        "eslint-plugin-jsx-a11y": "^2.2.3",
        "eslint-plugin-react": "^6.8.0",
        "extract-text-webpack-plugin": "^1.0.1",
        "less": "^2.7.1",
        "mocha": "^3.2.0",
        "node-sass": "^4.1.1",
        "react-hot-loader": "^3.0.0-beta.6",
        "sass-loader": "^4.1.1",
        "style-loader": "^0.13.1",
        "url-loader": "^0.5.7",
        "webpack": "^1.14.0",
        "webpack-dev-middleware": "^1.9.0",
        "webpack-dev-server": "^1.16.2",
        "webpack-hot-middleware": "^2.14.0"
    }
}
